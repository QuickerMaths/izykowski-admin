{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "rootDir": "api",
        "baseUrl": ".",
        "paths": {
            "*": ["*", "api/*"]
        }
    },
    "include": ["api/**/*"],
    "exclude": ["node_modules", "dist"]
}
